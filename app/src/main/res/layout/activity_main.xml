<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ali_j.game3.MinesweeperGame">


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"

        android:layout_height="507dp"
        android:layout_marginBottom="8dp"

        android:layout_marginTop="5dp"
        android:background="@drawable/back"
        android:stretchColumns="0,2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:layout_height="36dp">

            <TextView

                android:id="@+id/Timer"

                android:layout_column="0"

                android:text="000" />

            <ImageButton
                android:id="@+id/Smiley"

                android:layout_height="match_parent"

                android:layout_column="1"

                android:background="@drawable/smiley_button_states" />

            <TextView

                android:id="@+id/MineCount"

                android:layout_height="match_parent"

                android:layout_column="2"
                android:text="000" />
        </TableRow>

        <TableRow
            android:layout_width="200dp"
            android:layout_height="200dp">

            <TextView

                android:layout_height="match_parent"

                android:layout_column="0"

                android:layout_span="3"

                android:padding="10dip" />
        </TableRow>

        <TableRow android:layout_width="50dp"
            android:layout_height="50dp">


            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:id="@+id/MineField"

                android:layout_width="260dp"

                android:layout_height="260dp"

                android:layout_span="3"

                android:gravity="bottom"

                android:padding="5dip"

                android:stretchColumns="*"></TableLayout>
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
